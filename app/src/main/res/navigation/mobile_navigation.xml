<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.app.tiktok.ui.home.fragment.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_userFragment2"
            app:destination="@id/userFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_discovery"
        android:name="com.app.tiktok.ui.discover.fragment.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" />
    <fragment
        android:id="@+id/userFragment"
        android:name="com.app.tiktok.ui.user.UserFragment"
        android:label="UserFragment" >
        <argument
            android:name="UserDataModel"
            app:argType="com.app.tiktok.ui.user.UserDataModel" />
    </fragment>
    <fragment
        android:id="@+id/storyBunchFragment"
        android:name="com.app.tiktok.ui.story.StoryBunchFragment"
        android:label="StoryBunchFragment" />
</navigation>