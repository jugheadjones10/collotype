<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="GalleryData"
            type="com.app.tiktok.model.StoriesDataModel" />
        <variable
            name="PostData"
            type="com.app.tiktok.model.StoriesDataModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="250dp"
    android:layout_height="250dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/RoundedRectangularImageViewShape" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gallery_profile_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="235dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/post_image"
        app:shapeAppearance="@style/RoundedImageViewShape" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        android:text="@{GalleryData.groupName}"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/post_image"
        app:layout_constraintStart_toEndOf="@+id/gallery_profile_image" />

    <TextView
        android:id="@+id/post_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="250dp"
        android:text="@{PostData.storyDescription}"
        android:textColor="@color/colorBlack"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/gallery_profile_image"
        app:layout_constraintTop_toTopOf="@+id/post_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>