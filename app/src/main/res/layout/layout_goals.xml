<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="period"
            type="String" />

        <variable
            name="caption"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goals_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_container" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_member_one"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goals_recycler_view"
            app:shapeAppearance="@style/RoundedImageViewShape"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="1dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/group_member_two"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/group_member_one"
            app:layout_constraintTop_toBottomOf="@+id/goals_recycler_view"
            app:shapeAppearance="@style/RoundedImageViewShape"
            app:strokeColor="@color/colorWhite"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/process_posts_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{caption}"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/group_member_two"
            app:layout_constraintTop_toBottomOf="@+id/goals_recycler_view" />

        <TextView
            android:id="@+id/process_posts_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            android:text="@{period}"
            android:textColor="@color/colorWhite"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/group_member_two"
            app:layout_constraintTop_toBottomOf="@+id/process_posts_caption" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>